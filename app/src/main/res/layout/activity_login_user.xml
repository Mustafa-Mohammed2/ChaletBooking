<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login_User">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/primary"
            android:textAlignment="center"
            android:textColorHint="@color/primary"
            app:boxBackgroundColor="@color/icons"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            app:startIconTint="@color/primary">

            <EditText
                android:id="@+id/logUser_et_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Email"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary"
                android:textSize="23sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/primary"
            android:textAlignment="center"
            android:textColorHint="@color/primary"
            app:boxBackgroundColor="@color/icons"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primary"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/primary">

            <EditText
                android:id="@+id/logUser_et_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Password"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary"
                android:textSize="23sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/logUser_cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:buttonTint="@color/primary"
            android:padding="@dimen/_5sdp"
            android:text="Remember"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logUser_btn_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_background"
            android:padding="4dp"
            android:shadowColor="#D8000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:shadowColor="#D8000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="No Account"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logUser_tv_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="6dp"
            android:shadowColor="#D8000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="Create New Account"
            android:textColor="@color/primary"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>